<%- include('./partials/head')%>
<link rel="stylesheet" href="/stylesheets/criarEventos.css">
</head>
<body class="body">
    <div class="container_eventos">
        <%- include('./partials/somenteHeader')%>
    </div>
    <div class="container__total">
      <section class="section__info">
        <div class="info__foto">
            <img src= "<%= profile.photo_profile_path %>" alt="" class="info__foto__perfil">
        </div>
        <div class="info__wrapper">
        <div class="box__nome__aniversario">
            <span class="info"><%= profile.pet_name %></span>
            <span class="info"><%= profile.birthday %></span>
        </div>  
        </div>
        
      </section>
    <div class="info__loc">
        <i class="fa fa-map-marker info__localizacao" aria-hidden="true"><span class="info__localizacao__span">SÃ£o Paulo - SP</span></i>
    </div>

    <section class="criar-evento">
      <div class="nome-evento">
        <form action="/create" class="nome-evento-form" method="POST">
          <label for="eventName" class="label__form" >Nome do Evento</label>
          <input type="text" class="form__text" name="name" id="eventName" >
        </form>
      </div>
      <div class="data-e-hora">
        <div class="data-evento">
          <form action="/create" class="data-evento-form" method="POST">
            <label for="eventDate" class="laber_form">Data Inicial</label>
            <br>
            <input class="campo_data_hora" type="date" name="beginning_date">
            <br>
            <label for="eventDate" class="laber_form">Data Final</label>
            <br>
            <input class="campo_data_hora" type="date" name="ends_date">
         </form>
        </div>
        <div class="hora-evento">
          <form action="/create" class="hora-evento-form" method="POST">
            <label for="eventHour" class="label_form">Hora Inicial</label>
            <br>
            <input class="campo_data_hora" type="time" name="hour">
            <br>
            <label for="eventDate" class="label_form">Hora Final</label>
            <br>
            <input class="campo_data_hora" type="time" name="finish_hour">
          </form>
        </div>
        
      </div>
      <div class="local-evento-convite">
        <form action="/create" class="local-evento-form" method="POST">
          <label for="eventAdress" class="label__form" >Local do Evento</label>
          <input type="text" class="form__text" name="local" id="eventAdress" >
        </form>
        <button type="submit" class="convidarform_btn">Convidar</button>
      </div>
      <div class="descricao-evento">
        <form action="/create" class="descricao-evento-form" method="POST">
          <label for="eventDescrition" class="label__form" >Descricao do Evento</label>
          <input type="text" class="form__text" name="description" id="eventDescription" style="height: 200px;">
        </form>
        <form action="/create" method="POST" enctype="multipart/form-data">
          Adicionar Foto do Evento <input type="file" name="photo_event">
          <br>
          <button type="submit" class="form_btn" >Enviar</button>
                    
        </form>
        <form action="/create" method="POST" >
          <button type="submit" class="form_btn" >Criar</button>
        </form>
        

        
      </div>
    </section>
    <script src="/js/darkMode.js"></script>
</div>
</body>
