<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/72b828f62d.js" crossorigin="anonymous"></script>
    <script defer src="/js/darkMode.js"></script>
    <script defer src="/js/like.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/font-awesome.min.css" />
    <link rel="stylesheet" href="/stylesheets/reset.css" />
    <link rel="stylesheet" href="/stylesheets/header.css" />
    <link rel="stylesheet" href="/stylesheets/perfilVisitante.css" />
    <link rel="stylesheet" href="/stylesheets/padrao.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Perfil visitante</title>
  </head>
  <body>
    <%- include('./partials/somenteHeader')%>
    <div class="container-lg">
      
      <main>
      <div class="cabecalho">
          <div class="menu_cabecalho_02">
                <img src="<%=searchProfileVisitante.photo_profile_path%>" alt="" class="img_cabecalho">
                <h1><%=searchProfileVisitante.pet_name%></h1>  
                <form action="/manimal/perfilVisitante/<%=searchProfileVisitante.id%>/add/" method="POST">
                    <button class="btn" type="submit">Seguir</button>
                </form>
                
         </div>
          <div class="cabecalho_1">
            <div class="menu_cabecalho_01">
              <h2><%=countPosts.count%> Publicações</h2>
              <h2><%=seguidores.count%> Seguidores</h2>
              <h2><%=seguindo.count%> Seguindo</h2>
            </div>
            <div class="menu_cabecalho_03">
                <h2><i class="fa fa-home inco_casa" aria-hidden="true"></i> Mora <%=searchProfileVisitante.local%>, Brasil</h2>
                <h2><i class="fa fa-map-marker inco_localizacao" aria-hidden="true"></i> <%=searchProfileVisitante.local%></h2>
                <h2><i class="fa fa-commenting inco_dial" aria-hidden="true"></i><%=searchProfileVisitante.nickname%></h2>
            </div>
         </div>  
        </div>
       <section class="text_amigo">
            <h5 class="texto_amigos">Amigos</h5>
            <ul class="ver_amigos">
                <% amigos.forEach(amigo=>{ %>
                <li>
                    <img src="<%=amigo.photo_profile_path%>" alt="" class="img_amigo">
                </li>
                <% }) %>
            </ul>
        </section>
            <h5 class="texto_publicacao">Publicações</h5>
        <section class="timeline">
            <div class="postagens">
                <div class="post__wrapper">
                  <% posts.forEach(post=>{ %>
                  <div class="post__foto">
                    <img class="post__foto" src="<%=post.photo_post_path%>" alt="">
                  </div>
                  <ul class="post__lista_icons">
                      <li>
                        <i onclick=likePost(this) class="fa fa-paw menu__icon" aria-hidden="true"></i>
                        <p>0 Likes</p>
                      </li>
                  </ul>
                  <div class="post__legenda">
                      <p><%=post.post%></p>
                  </div>
                  <% }) %>
                </div>
        </section>  
      </main>
    </div>
  </body>
</html>
