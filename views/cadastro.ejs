<%- include('./partials/head')%>
<link rel="stylesheet" href="/stylesheets/cadastro.css">
</head>
<body class="container">
    <main class="main">
        <img src="/images/Logo1.png" alt="Logo Manimal">
        <div class="forms">
          <div>
            <form action="" method="" class="form">
                <input type="text" name="email" placeholder="Insira seu email">
            </form>
          </div>
          <div>
            <form action="" method="" class="form">
                <input type="text" name="name" placeholder="Insira seu nome completo">
            </form>
          </div>
          <div class="password">
            <form action="" method="" class="form">
              <input id="password" type="password" name="password" placeholder="Insira sua senha" encripted>
              <i class="fa fa-eye-slash" onclick="eyeClick()" aria-hidden="true"></i>
            </form>
          </div>
          <div class="password">
            <form action="" method="" class="form">
              <input id="password2" type="password" name="password" placeholder="Confirme sua senha">
              <i class="fa fa-eye-slash" onclick="eyeClick2()" aria-hidden="true"></i>
            </form>
          </div>
          <div class="submit">
            <form action="" method="POST" class="submit">
              <input type="submit" name="submit" value="Registrar!">
          </div>               
        </div>
        <div class="login">
            <p>Já tem uma conta? <a href="/manimal">Faça login.</a></p>
        </div>
    </main>
    <script src="/js/eyeClick.js"></script>
    <script src="/js/darkMode.js"></script>
</body>
</html>